{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Projeto de aprendizado em Clean Architecture aplicada a Node.js usando Test-Driven Development (TDD)",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --noStackTrace --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit.config.cjs",
    "test:integration": "npm test -- --watch -c jest-integration.config.cjs",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "standard": "^17.1.2"
  },
  "dependencies": {
    "validator": "^13.15.26"
  }
}
