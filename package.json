{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Projeto de aprendizado em Clean Architecture aplicada a Node.js usando Test-Driven Development (TDD)",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch --silent --noStackTrace",
    "test:staged": "jest --passWithNoTests --findRelatedTests --silent",
    "test:ci": "jest --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "standard": "^17.1.2"
  }
}
